<Window x:Class="SmartMirror.View.SmartMirrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMirror.View"
        xmlns:viewmodel="clr-namespace:SmartMirror.ViewModel"
        mc:Ignorable="d"
        Height="800" Width="600"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        BorderThickness="3"
        BorderBrush="White">

    <Window.DataContext>
        <viewmodel:ViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0">

            <TextBlock Text="{Binding CurrentDateTime}"
                       FontSize="20"
                       Margin="30"
                       Foreground="White"
                       FontFamily="Broadway"/>

        </StackPanel>

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right">

            <TextBlock Text="{Binding Temp, StringFormat={}{0} °F}"
                       FontSize="20"
                       Margin="0 30 30 0"
                       Foreground="White"
                       FontFamily="Broadway"/>

            <TextBlock Text="{Binding Description}"
                       FontSize="10"                       
                       Foreground="White"
                       FontFamily="Broadway"/>

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    Margin="10">

            <Border BorderBrush="White"
                    BorderThickness="5"
                    CornerRadius="80"
                    Margin="10"
                    Height="150">
                
            <Image Source="{Binding DogImage}">
                
                <Image.OpacityMask>
                    <RadialGradientBrush>
                        <GradientStop Color="Black"/>
                        <GradientStop Offset="1"/>
                        <GradientStop Color="#A0FFFFFF"/>
                    </RadialGradientBrush>
                </Image.OpacityMask>
            </Image>
            </Border>

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="30">

            <TextBlock Foreground="White"
                       FontFamily="Broadway">
                <Run Text="Days On This Journey:"/>
                <LineBreak/>
                <Run Text="{Binding DaysTogether}"/>
            </TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="3" 
                    Grid.ColumnSpan="2"
                    Grid.Column="0"
                    HorizontalAlignment="Center">

            <TextBlock Foreground="White"
                       FontFamily="Broadway"
                       Margin="5">
                <Run Text="{Binding CurrentQuote.text}"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="{Binding CurrentQuote.author, StringFormat=-{0}}"/>
            </TextBlock>

        </StackPanel>



    </Grid>
</Window>
